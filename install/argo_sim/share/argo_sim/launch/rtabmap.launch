<launch>
  <arg name="basename" default="argo_sim" />
  <arg name="camera" default="camera" />

  <group ns="rtabmap">

    <!-- Use RGBD synchronization -->
    <!-- Here is a general example using a standalone nodelet, 
         but it is recommended to attach this nodelet to nodelet 
         manager of the camera to avoid topic serialization -->

    <node if="true" pkg="nodelet" type="nodelet" name="rgbd_sync"
          args="standalone rtabmap_ros/rgbd_sync" output="screen">
      <remap from="rgb/image"
             to="/$(arg basename)/$(arg camera)/rgb/image_rect_color"/>
      <remap from="depth/image"
             to="/$(arg basename)/$(arg camera)/depth/depth_registered"/>
      <remap from="rgb/camera_info" to="/$(arg basename)/$(arg camera)/rgb/camera_info"/>
      <remap from="rgbd_image"      to="rgbd_image"/> <!-- output -->
      
      <!-- Should be true for not synchronized camera topics 
           (e.g., false for kinectv2, zed, realsense, true for xtion, kinect360)-->
      <param name="approx_sync"       value="false"/> 
      <param name="queue_size" type="int" value="20"/>
    </node>

    <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" 
          args="--delete_db_on_start">
      <param name="frame_id" type="string" value="base_link"/>

      <param name="subscribe_depth" type="bool" value="false"/>
      <param name="subscribe_rgb" type="bool" value="false"/>
      <param name="subscribe_rgbd" type="bool" value="true"/>
      <param name="subscribe_scan" type="bool" value="false"/>

      <remap from="rgb/image" to="/$(arg basename)/$(arg camera)/rgb/image_rect_color"/>
      <remap from="depth/image"
             to="/$(arg basename)/$(arg camera)/depth/depth_registered"/>
      <remap from="rgb/camera_info" to="/$(arg basename)/$(arg camera)/rgb/camera_info"/>
      <remap from="odom" to="/$(arg basename)/odom"/>
      <remap from="scan" to="/$(arg basename)/front_laser/scan"/>
      <remap from="rgbd_image" to="rgbd_image"/>
      <remap from="gps/fix" to="/$(arg basename)/gps/fix"/>
      <remap from="imu" to="/$(arg basename)/imu/data"/>

      <param name="queue_size" type="int" value="10"/>

      <param name="approx_sync" type="bool" value="true"/>

      <remap from="grid_map" to="/map"/>

      <!-- RTAB-Map's parameters -->
      <param name="RGBD/AngularUpdate"        type="string" value="0.01"/>
      <param name="RGBD/LinearUpdate"         type="string" value="0.01"/>
      <param name="RGBD/OptimizeFromGraphEnd" type="string" value="false"/>
      <param name="RGBD/AngularUpdate"        type="string" value="0.0"/>
      <param name="RGBD/LinearUpdate"         type="string" value="0.0"/>
      <param name="Grid/FromDepth"            type="string" value="true"/>
      <param name="Reg/Force3DoF"             type="string" value="false"/>
      <param name="Reg/Strategy"              type="string" value="0"/>
      <param name="Kp/DetectorStrategy" value="10"/>
      <param name="Vis/FeatureType" value="10"/>
      <!-- ORB-octree:10 is pretty good-->
      
      <param name="Rtabmap/CreateIntermediateNodes" type="string" value="false"/>
      <param name="RGBD/NeighborLinkRefining" type="string" value="true"/>
      <param name="RGBD/ProximityBySpace"     type="string" value="true"/>
      <param name="RGBD/OptimizeMaxError"     type="string" value="3.5"/>

<!--      <param name="Odom/AlignWithGround" value="true"/>-->
      <param name="Odom/Strategy" value="6"/>
      <param name="Odom/Holonomic" value="false"/>

      <param name="Grid/RangeMax" type="string" value="0.0"/>
      <param name="Optimizer/Strategy" value="1" />
      <param name="publish_tf" type="bool"   value="true"/>
    </node>
    
    
    <node if="true" pkg="rtabmap_ros" type="rgbd_odometry" name="rgbd_odometry"   
          output="screen">
      <remap from="rgb/image" to="/$(arg basename)/$(arg camera)/rgb/image_rect_color"/>
      <remap from="depth/image"
             to="/$(arg basename)/$(arg camera)/depth/depth_registered"/>
      <remap from="rgb/camera_info" to="/$(arg basename)/$(arg camera)/rgb/camera_info"/>
      <remap from="imu"             to="/$(arg basename)/imu/data"/>
      
      <param name="subscribe_depth" type="bool" value="false"/>
      <param name="subscribe_rgb" type="bool" value="false"/>
      <param name="subscribe_rgbd" type="bool" value="true"/>
      <param name="subscribe_scan" type="bool" value="false"/>

      <!-- If I set the frame_id to base_link and odom_frame_id to odom,
      as I think the should be, then what is published by rgbd_odometry is too low
      by the height of base_link. -->
      <param name="frame_id" type="string" value="odom"/>
      <param name="odom_frame_id" type="string" value="map"/>
      <param name="odom_tf_linear_variance" value="0.0001"/>
      <!-- adjust depending on real odom error -->
      <param name="odom_tf_angular_variance" value="0.0005"/>
      <!-- adjust depending on real odom error -->
      <param name="publish_tf" type="bool"   value="false"/>
<!--
      <param name="ground_truth_frame_id" type="string" value="utm"/>
      <param name="ground_truth_base_frame_id"  type="string" value="odom"/>
-->
      <param name="wait_for_transform_duration" type="double" value="0.2"/>
      <param name="wait_imu_to_init" type="bool" value="false"/>
      <param name="approx_sync" type="bool" value="true"/>
      <param name="queue_size" type="int" value="10"/>
      <param name="subscribe_rgbd" type="bool"   value="true"/>
<!--      <param name="guess_frame_id" type="string" value="odom_combined"/>-->
      <param name="guess_min_translation" type="double" value="0.0"/>
      <param name="guess_min_rotation" type="double" value="0.0"/>
      <param name="expected_update_rate" type="double" value="0.0"/>
      <param name="max_update_rate" type="double" value="0.0"/>
      
      <param name="GFTT/MinDistance" type="string" value="10"/>
      <param name="Reg/Force3DoF"    value="false" />

    </node>

    <node if="true" pkg="rtabmap_ros" type="rtabmapviz" name="rtabmapviz"
          output="screen">
      <param name="subscribe_depth" type="bool" value="false"/>
      <param name="subscribe_rgb" type="bool" value="false"/>
      <param name="subscribe_rgbd" type="bool" value="true"/>
      <param name="subscribe_scan" type="bool" value="false"/>

      <param name="subscribe_odom_info" type="bool" value="true"/>
      <param name="odom" type="string" value="odom"/>
      <param name="frame_id" type="string" value="base_link"/>
      <param name="odom_frame_id" type="string" value="odom"/>
    </node>
  </group>
</launch>





